<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51d3c4"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_menu_home"
        style="@style/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首页" />

    <TextView
        android:id="@+id/tv_menu_calendar"
        style="@style/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日程表" />

    <TextView
        android:id="@+id/tv_menu_total"
        style="@style/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部" />

    <TextView
        style="@style/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分类" />

    <TextView
        style="@style/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清单" />

    <TextView
        style="@style/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简介" />

    <TextView
        style="@style/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间线" />

    <TextView
        style="@style/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置" />

</LinearLayout>