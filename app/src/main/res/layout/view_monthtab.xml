<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:id="@+id/hsv_monthtab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_jan"
                style="@style/monthtab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="一  月" />

            <TextView
                android:id="@+id/tv_feb"
                style="@style/monthtab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二  月" />

            <TextView
                android:id="@+id/tv_mar"
                style="@style/monthtab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三  月" />

            <TextView
                android:id="@+id/tv_apr"
                style="@style/monthtab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="四  月" />

            <TextView
                android:id="@+id/tv_may"
                style="@style/monthtab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五  月" />

            <TextView
                android:id="@+id/tv_jun"
                style="@style/monthtab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="六  月" />

            <TextView
                android:id="@+id/tv_jul"
                style="@style/monthtab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="七  月" />

            <TextView
                android:id="@+id/tv_aug"
                style="@style/monthtab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="八  月" />

            <TextView
                android:id="@+id/tv_sep"
                style="@style/monthtab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="九  月" />

            <TextView
                android:id="@+id/tv_oct"
                style="@style/monthtab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十  月" />

            <TextView
                android:id="@+id/tv_nov"
                style="@style/monthtab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十一月" />

            <TextView
                android:id="@+id/tv_dec"
                style="@style/monthtab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="十二月" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>