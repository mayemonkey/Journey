<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_total_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff">

    <View
        android:id="@+id/iv_total_line"
        android:layout_width="2dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="#fff"/>

    <ImageView
        android:id="@+id/iv_total_point"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/total_lv_point_done_shape"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_total_point"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/iv_total_point"
        android:layout_toStartOf="@id/iv_total_point"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="8dp"
            android:background="#51d3c4"/>

        <TextView
            android:id="@+id/tv_total_done_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="时间"
            android:textColor="#51d3c4"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_total_done_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="标题"
            android:textColor="#fff"
            android:textSize="16sp"/>
    </LinearLayout>

</RelativeLayout>