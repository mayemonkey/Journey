<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_list_friends"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/rl_list_friends_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">


        <com.wipe.zc.journey.lib.CircleImageView
            android:id="@+id/civ_friends_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_icon"/>

        <TextView
            android:id="@+id/tv_friends_unread_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/civ_friends_icon"
            android:layout_alignTop="@id/civ_friends_icon"
            android:background="@drawable/chat_unread"
            android:gravity="center"
            android:text="1"
            android:textColor="#fff"
            android:textSize="12sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/rl_list_friends_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_friends_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好友名称"
            android:textColor="#000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_friends_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="上一条消息"
            android:textColor="#99000000"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_friends_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="时间"
        android:textColor="#99000000"/>


</RelativeLayout>
