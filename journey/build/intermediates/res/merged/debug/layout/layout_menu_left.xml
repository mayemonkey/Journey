<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#51d3c4"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_menu_home"
        style="@style/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首页"/>

    <TextView
        android:id="@+id/tv_menu_calendar"
        style="@style/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日程表"/>

    <TextView
        android:id="@+id/tv_menu_total"
        style="@style/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_menu_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="好友"/>

        <com.wipe.zc.journey.lib.CircleImageView
            android:id="@+id/civ_menu_unread_sign"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignRight="@id/tv_menu_friends"
            android:src="#ff0000"
            android:visibility="invisible"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_menu_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <com.wipe.zc.journey.lib.CircleImageView
            android:id="@+id/civ_menu_message_sign"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignRight="@id/tv_menu_message"
            android:src="#ff0000"
            android:visibility="invisible"/>

    </RelativeLayout>
