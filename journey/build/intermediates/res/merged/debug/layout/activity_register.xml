<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp" >

        <ImageView
            android:id="@+id/iv_register_cancel"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_cancel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="注册"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <com.wipe.zc.journey.lib.CircleImageView
            android:id="@+id/civ_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_icon" />

        <com.wipe.zc.journey.lib.CircleImageView
            android:id="@+id/civ_icon_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@id/civ_icon"
            android:src="@drawable/add_icon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical" >

        <TextView
            style="@style/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称:" />

        <EditText
            android:id="@+id/et_register_nickname"
            style="@style/login_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <View
            android:id="@+id/ve_register_nickname"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#e4e4e4" />

        <TextView
            style="@style/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="常用邮箱:" />

        <EditText
            android:id="@+id/et_register_email"
            style="@style/login_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <View
            android:id="@+id/ve_register_email"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#e4e4e4" />

        <TextView
            style="@style/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="密码:" />

        <EditText
            android:id="@+id/et_register_password"
            style="@style/login_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:inputType="textPassword" />

        <View
            android:id="@+id/ve_register_password"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#e4e4e4" />

        <TextView
            style="@style/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="密码确认:" />

        <EditText
            android:id="@+id/et_register_repassword"
            style="@style/login_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <View
            android:id="@+id/ve_register_repassword"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#e4e4e4" />

        <TextView
            style="@style/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="手机:" />

        <EditText
            android:id="@+id/et_register_phone"
            style="@style/login_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <View
            android:id="@+id/ve_register_phone"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#e4e4e4" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_button"
            android:gravity="center"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                style="@style/login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已经注册了账号？" />

            <TextView
                android:id="@+id/tv_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即登录" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/studiospace/Journey/journey/src/main/res/layout/activity_register.xml -->