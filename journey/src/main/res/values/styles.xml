<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="login_text" parent="android:Widget.TextView">
        <item name="android:textColor">#acacaf</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="journey_text" parent="android:Widget.TextView">
        <item name="android:textColor">#949494</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="login_edittext" parent="android:Widget.EditText">
        <item name="android:background">@drawable/alpha_background</item>
        <item name="android:textColor">#13131c</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="journey_edittext" parent="android:Widget.EditText">
        <item name="android:background">@drawable/alpha_background_add</item>
        <item name="android:textColor">#13131c</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="menu_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- Calendar样式 -->
    <style name="calendar_title" parent="android:Widget.Holo.Light.TextView">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="calendar_date_this" parent="android:Widget.Holo.Light.TextView">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="calendar_date_notthis" parent="android:Widget.Holo.Light.TextView">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#99ffffff</item>
    </style>

    <style name="calendar_date_selected" parent="android:Widget.Holo.Light.TextView">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#ffffffff</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="monthtab_style" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/monthtab_selector</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="layout_total_viewpager_title" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#99000000</item>
    </style>

    <style name="layout_total_viewpager_number" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="exit_style" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#ff0000</item>

    </style>


</resources>